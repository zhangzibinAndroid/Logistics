<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/line_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/px25">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px20"
                android:src="@drawable/ic_goods_details_start" />

            <TextView
                android:id="@+id/tv_goods_details_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px30"
                android:layout_toRightOf="@+id/img_green"
                android:gravity="center_vertical"
                android:text="出发地"
                android:textColor="@color/black"
                android:textSize="@dimen/px30" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px20"
                android:layout_marginTop="-5px"
                android:src="@drawable/ic_yuandian" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_gray"
                android:layout_marginLeft="@dimen/px20"
                android:layout_marginTop="-10px"
                android:src="@drawable/ic_yuandian" />


            <TextView
                android:id="@+id/tv_goods_details_start_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px32"
                android:layout_marginTop="@dimen/px15"
                android:layout_toRightOf="@+id/img_gray"
                android:gravity="center_vertical"
                android:text="距离装货地约2449.08公里"
                android:textSize="@dimen/px26" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px02"
                android:layout_marginLeft="@dimen/px30"
                android:layout_toRightOf="@+id/im"
                android:layout_marginRight="@dimen/px30"
                android:layout_marginTop="@dimen/px07"
                android:background="@color/lightyellow">
            </View>

            <ImageView
                android:id="@+id/im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_gray"
                android:layout_marginLeft="@dimen/px20"
                android:layout_marginTop="-10px"
                android:src="@drawable/ic_yuandian" />


        </com.zhy.autolayout.AutoRelativeLayout>



        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5px">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20"
                    android:src="@drawable/ic_goods_details_end" />

                <TextView
                    android:id="@+id/tv_goods_details_end"
                    android:layout_width="@dimen/px490"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px30"
                    android:layout_toRightOf="@+id/img5"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="目的地"
                    android:textColor="@color/black"
                    android:textSize="@dimen/px30" />


                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_goods_details_end">

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px20" />

                    <TextView
                        android:id="@+id/tv_goods_details_end_context"
                        android:layout_width="@dimen/px480"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px32"
                        android:layout_marginTop="@dimen/px15"
                        android:layout_toRightOf="@+id/img6"
                        android:text="运货里程约2449.08公里"
                        android:textSize="@dimen/px26" />
                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoRelativeLayout>



        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--导航-->
    <Button
        android:id="@+id/btn_show_navigation"
        android:layout_width="@dimen/px170"
        android:layout_height="@dimen/px160"
        android:background="@drawable/sel_shape_navigation"
        android:text="导航"
        android:textColor="@color/white"
        android:textSize="@dimen/px30"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/px48"/>

    <!--详细信息-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_area"
        android:layout_marginTop="@dimen/px15"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px25"
        android:id="@+id/autoLinearLayout">



        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px10">

            <ImageView
                android:id="@+id/img8"
                android:layout_width="@dimen/px80"
                android:layout_height="@dimen/px60"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px20"
                android:padding="@dimen/px05"
                android:src="@mipmap/ic_goods_traveltime" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="@dimen/px120"
                android:layout_height="@dimen/px60"
                android:layout_toRightOf="@+id/img8"
                android:gravity="center"
                android:text="时间"
                android:textSize="@dimen/px26" />

            <TextView
                android:id="@+id/tv_goods_details_time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px60"
                android:layout_marginLeft="@dimen/px30"
                android:layout_toRightOf="@+id/tv1"
                android:gravity="center_vertical"
                android:text="2017-08-28 全天均可装"
                android:textSize="@dimen/px26" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/lay_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px">

            <ImageView
                android:id="@+id/img9"
                android:layout_width="@dimen/px80"
                android:layout_height="@dimen/px60"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px20"
                android:padding="5px"
                android:src="@mipmap/ic_goods_remark"/>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="@dimen/px120"
                android:layout_height="@dimen/px60"
                android:layout_toRightOf="@+id/img9"
                android:gravity="center"
                android:text="货品"
                android:textSize="@dimen/px26" />

            <TextView
                android:id="@+id/tv_goods_details_goods"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px60"
                android:layout_marginLeft="@dimen/px30"
                android:layout_toRightOf="@+id/tv2"
                android:gravity="center_vertical"
                android:text="长背螺旋"
                android:textSize="@dimen/px26" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px10">

            <ImageView
                android:id="@+id/img10"
                android:layout_width="@dimen/px80"
                android:layout_height="@dimen/px60"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px20"
                android:src="@drawable/ic_goods_weight"
                android:padding="@dimen/px05"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="@dimen/px120"
                android:layout_height="@dimen/px60"
                android:layout_toRightOf="@+id/img10"
                android:gravity="center"
                android:text="规格"
                android:textSize="@dimen/px26" />

            <TextView
                android:id="@+id/tv_goods_details_specifications"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px60"
                android:layout_marginLeft="@dimen/px30"
                android:layout_toRightOf="@+id/tv3"
                android:gravity="center_vertical"
                android:text="333.3吨/100方"
                android:textSize="@dimen/px26" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px10">

            <ImageView
                android:id="@+id/img11"
                android:layout_width="@dimen/px80"
                android:layout_height="@dimen/px60"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px20"
                android:src="@drawable/ic_goods_cartype"
                android:padding="@dimen/px05" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="@dimen/px120"
                android:layout_height="@dimen/px60"
                android:layout_toRightOf="@+id/img11"
                android:gravity="center"
                android:text="车型"
                android:textSize="@dimen/px26" />

            <TextView
                android:id="@+id/tv_goods_details_cartype"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px60"
                android:layout_marginLeft="@dimen/px30"
                android:layout_toRightOf="@+id/tv4"
                android:gravity="center_vertical"
                android:text="高低板车 13米"
                android:textSize="@dimen/px26" />
        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px10">

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/real_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img12"
                    android:layout_width="@dimen/px80"
                    android:layout_height="@dimen/px60"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px20"
                    android:padding="@dimen/px05"
                    android:src="@drawable/ic_leave_message" />

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="@dimen/px120"
                    android:layout_height="@dimen/px60"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img12"
                    android:gravity="center"
                    android:text="备注"
                    android:textSize="@dimen/px26" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:id="@+id/tv_goods_details_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px30"
                android:layout_marginRight="@dimen/px10"
                android:layout_toRightOf="@+id/real_y"
                android:text="联系我时，请说明你是某省回头车的哪个司机，谢谢！祝你出车愉快！！！"
                android:layout_marginTop="@dimen/px07"
                android:textSize="@dimen/px26" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
