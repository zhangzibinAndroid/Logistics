<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyleSelect">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/px25</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/px10</item>
        <item name="android:textColor">@color/textselfirst</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/px40</item>
        <item name="android:textSize">@dimen/px25</item>
    </style>

    <style name="ViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px02</item>
        <item name="android:background">#E9EDEE</item>
        <item name="android:layout_marginLeft">@dimen/px40</item>
        <item name="android:layout_marginRight">@dimen/px40</item>
    </style>

    <style name="Editext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px80</item>
        <item name="android:layout_margin">@dimen/px20</item>
        <item name="android:background">@drawable/shape_border</item>
        <item name="android:textSize">@dimen/px30</item>
        <item name="android:visibility">gone</item>
        <item name="android:padding">@dimen/px20</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:layout_width">@dimen/px700</item>
        <item name="android:layout_height">@dimen/px500</item>
        <item name="android:layout_marginTop">@dimen/px40</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>



    <!--popWindow弹出动画-->
    <style name="dialogWindowAnim_style">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim_top_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim_top_bottom</item>
    </style>

    <style name="style_view">
        <item name="android:layout_marginLeft">@dimen/px30</item>
        <item name="android:layout_marginRight">@dimen/px30</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px01</item>
        <item name="android:background">@color/line_view</item>
    </style>

    <style name="style_textview">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/px20</item>
        <item name="android:textSize">@dimen/px30</item>
        <item name="android:layout_marginLeft">@dimen/px240</item>
        <item name="android:layout_width">@dimen/px380</item>
        <item name="android:layout_height">@dimen/px80</item>
    </style>

</resources>
